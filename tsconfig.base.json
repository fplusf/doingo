{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "lib": ["dom", "es2019"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
